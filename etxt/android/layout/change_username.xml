<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/bsc2"
    android:background="@drawable/rounded_top_dialog"
    android:layout_width="match_parent"
    android:layout_height="250dp">
    <TextView
        android:layout_margin="5dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa_bold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Üýtegtmek bölümi"/>
    <EditText
        android:textColor="@color/black"
        android:inputType="text"
        android:lines="0"
        android:fontFamily="serif"
        android:layout_margin="15dp"
        android:padding="9dp"
        android:background="@drawable/editcal"
        android:id="@+id/changename"
        android:minLines="7"
        android:hint="Parol - min 7simwol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textColor="@color/black"
        android:inputType="text"
        android:lines="0"
        android:layout_margin="15dp"
        android:padding="9dp"
        android:background="@drawable/editcal"
        android:id="@+id/chanpass"
        android:minLines="7"
        android:hint="Gaytalanyan parol - min 7simwol"
        android:fontFamily="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/passc"
        android:fontFamily="@font/comfortaa_bold"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"/>
    <WebView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/web22"/>
</LinearLayout>