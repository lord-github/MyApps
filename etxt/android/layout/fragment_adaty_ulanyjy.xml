<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".optional.adaty_ulanyjy">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:text="@string/yumus"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:id="@+id/yumussany"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="7dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="45dp"
                android:layout_gravity="center_vertical"
                android:layout_height="7dp">
                <RelativeLayout
                    android:background="@color/yy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:text="@string/yeryet"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/yeryet"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="7dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="45dp"
                android:layout_gravity="center_vertical"
                android:layout_height="7dp">
                <RelativeLayout
                    android:background="#005A04"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:text="@string/zakazpri"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/prinyaty"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="7dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="45dp"
                android:layout_gravity="center_vertical"
                android:layout_height="7dp">
                <RelativeLayout
                    android:background="@color/otkazuser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:text="@string/zakaz"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/zakaz"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="7dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="45dp"
                android:layout_gravity="center_vertical"
                android:layout_height="7dp">
                <RelativeLayout
                    android:background="@color/sary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:text="@string/bar"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:id="@+id/bar"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/renk1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:background="@color/renk1"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:background="@color/renk1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:background="@color/renk1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/yumustable"
                android:layout_height="match_parent"
                android:layout_margin="10dp"/>
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>