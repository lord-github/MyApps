<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".yumuslar.Startmess">


    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:fontFamily="serif"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Işiň ady *"/>
            <androidx.cardview.widget.CardView
               app:cardCornerRadius="8dp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:background="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="35dp"
                        android:src="@drawable/start"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <EditText
            android:background="@drawable/editcal"
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:id="@+id/startady"
            android:padding="8dp"
            android:inputType="text"
            android:lines="1"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=" "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ýumuşyň  sany"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:background="@drawable/editcal"
                android:layout_margin="5dp"
                android:fontFamily="serif"
                android:id="@+id/startsany"
                android:padding="8dp"
                android:inputType="number"
                android:lines="0"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="5"/>

            <TextView
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="*Bir ýerine ýetirilen ýumuşyň\n minimal bahasy 0.05 manat"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/renk4"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <TextView
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kanalyň salgysy"/>
        <EditText
            android:background="@drawable/editcal"
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:padding="8dp"
            android:inputType="text"
            android:id="@+id/startkanal"
            android:lines="1"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text=" "/>


        <TextView
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goşmaça bellik *"/>
        <EditText
            android:background="@drawable/editcal"
            android:layout_margin="5dp"
            android:fontFamily="serif"
            android:padding="8dp"
            android:inputType="text"
            android:textStyle="bold"
            android:id="@+id/startdusun"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:text=""/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/renk4"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ýerine ýetirijileriň süzgüji"/>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Bu bölümde öz islegiňize görä ýerine ýetirijileri saýlap bilersiňiz"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Bir ýumuşyň bahasy : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:fontFamily="serif"/>
            <TextView
                android:text="0.05 manat"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:fontFamily="serif"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="2dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="5 ýumuşyň bahasy : "
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"/>
            <TextView
                android:text="0.25 manat"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="11dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif"/>
        </LinearLayout>


               <Button
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:fontFamily="serif"
                   android:id="@+id/startbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moderatora ugratmak"/>

    </LinearLayout>
<WebView
    android:visibility="invisible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/startweb"/>
</FrameLayout>