<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".liderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Liderlik sanawy"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/yas"/>
        <LinearLayout
            android:layout_marginTop="32dp"
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Mugallym"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lidermug"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lidersw"/>
                <TextView
                    android:text="Talyp"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lidertal"/>

            </LinearLayout>
            <RadioGroup
                android:gravity="center"
                android:id="@+id/talypradio"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:orientation="horizontal">
                <RadioButton
                    android:text="Ählisi"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="15dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/liderall"/>
                <RadioButton
                    android:text="Topar boýunça"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lidertopar"/>
                <RadioButton
                    android:text="Kurs boýunça"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/liderkurs"/>
            </RadioGroup>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="italic"
                    android:textSize="15dp"
                    android:id="@+id/yyl"

                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="2023"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ýyllyk"/>
                <Switch
                    android:gravity="center"
                    android:id="@+id/liderradio"

                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </Switch>
                <TextView
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aýlyk"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:id="@+id/gozmeylider"
            android:visibility="invisible"
            android:layout_below="@id/ll2">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_krug"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:hint="F.A.A"
                android:textSize="15dp"
                android:id="@+id/lideradamgozlegmeydan"
                android:fontFamily="serif"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="15dp"

                android:layout_marginRight="60dp"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/lidergozlegknop"
                android:src="@drawable/search_40px"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/gozmeylider"
            android:layout_marginTop="2dp"
            android:id="@+id/lidernetije"/>
    </RelativeLayout>


</RelativeLayout>